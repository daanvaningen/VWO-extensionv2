{
  "manifest_version": 2,
  "name": "VWO extension",
  "version": "0.1.0",
  "description": "A Visual Web Optimizer extension to see active experiments, change the variation you are in and quickly hop in the VWO Editor to make changes to experiments.",
  "author": "Richard Bieringa & Daan van Ingen",

  "icons": { "16": "./img/vwo.png",
           "48": "./img/vwo.png",
          "128": "./img/vwo.png" },

  "browser_action": {
          "default_icon": {
            "16": "./img/vwo.png",
            "24": "./img/vwo.png",
            "32": "./img/vwo.png"
          },
          "default_title": "VWO Extension",
          "default_popup": "main.html"
        },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "web_accessible_resources" : ["/js/dom-script.js"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/content-script.js"],
      "permissions":"activeTab"
    }
  ],
    "background": {
    "scripts": ["./js/app.js"]
  }
}
